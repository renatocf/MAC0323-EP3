## FILES ##############################################################
SRC := main.c
OBJ := $(SRC:.c=.o)
BIN := ep3

## PROGRAMS ###########################################################
CC := gcc
RM := rm -f

## COMPILATION ########################################################
CLIBS  := -I.
CFLAGS := -ansi -Wall -pedantic -g 

## LINKAGE ############################################################
LDLIBS  := -L.
LDFLAGS := -lm

## BUILD ##############################################################
all: $(BIN)

$(BIN): $(OBJ)
	$(CC) $< -o $@ $(LDLIBS) $(LDFLAGS)

%.o: %.c
	$(CC) $(CLIBS) $(CFLAGS) -c $< -o $@

## OTHER ##############################################################
.PHONY: clean
clean:
	$(RM) *.o *.ghc *~
